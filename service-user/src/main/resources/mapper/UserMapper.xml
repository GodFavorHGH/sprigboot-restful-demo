<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haugv.mapper.UserMapper">
    <insert id="createUser" useGeneratedKeys="true" parameterType="User">
        insert into user
        (id,name,id_no,id_type,phone,status)
            values
        (#{id},#{name},#{idNo},#{idType},#{phone},#{status})
    </insert>

    <resultMap id="BaseUserMapping" type="User">
        <result column="id" property="id"></result>
        <result column="name" property="name"></result>
        <result column="id_no" property="idNo"></result>
        <result column="id_type" property="idType"></result>
        <result column="phone" property="phone"></result>
        <result column="status" property="status"></result>
    </resultMap>
    <select id="getUser" parameterType="int" resultMap="BaseUserMapping">
        select * from user where id = #{id}
    </select>

    <update id="updateUser" parameterType="User">
        update user
            <trim prefix="set" suffixOverrides=",">
                <if test="name !=null and name != ''">
                    name = #{name},
                </if>
                <if test="idNo !=null and idNo != ''">
                    id_no = #{idNo},
                </if>
                <if test="idType !=null and idType != ''">
                    id_type = #{idType},
                </if>
                <if test="phone !=null and phone != ''">
                    phone = #{phone},
                </if>
                <if test="status !=null and status != ''">
                    status = #{status},
                </if>
            </trim>
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where id = #{id} limit 1
    </delete>
</mapper>
